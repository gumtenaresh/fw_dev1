{include file='header.tpl.html'}
<form name="twitter_landing" id="twitter_landing" method="POST" action="">
    <div class="main_section1">
        <div class="fanwire_contact">
            <div class="contact_text">
                <p>Create Your Account</p>
                <div class="cl" align="center" style="color:#F00;padding: 5px 0;">{$msg}</div>
                <div class="cya_box">
                    <p class="tw_acc"></p>
                    <p> Connected as <span> {$smarty.session.name}.</span></p>
                </div>
            </div>
            <div class="contacts">
                <div class="upload">
                    <div class="upld_img">
                        <div class="img_display"> <img src ="{$smarty.const.SITE_URL}profile_images/{$smarty.session.image}" height="150" width="150"/></div>
                    </div>
                    <div class="upld_content">
                        <div class="signup_error">
                            <input type="text"  name="email" id="email" class="account_input" placeholder="Email Address"/>
                            <label for="email" generated="true" class="error" style="display:none;padding: 0 0 0 5px">This field is required.</label>
                            <p style="color:#999999; font-size:12px;"><span>*</span>required</p>
                        </div>
                        <div class="signup_error">
                            <input type="password" id="password1" name="password1"  class="account_input"  placeholder="Password"/>
                            <label for="password1" generated="true" class="error" style="display:none;padding: 0 0 0 5px"">This field is required.</label>
                            <p style="color:#999999; font-size:12px;"><span>*</span>required</p>
                        </div>
                        <div class="signup_error">

                            <input type="password"  id="password2" name="password2"   class="account_input"  placeholder="Confirm Password"/>
                            <label for="password2" generated="true" class="error" style="display:none; padding: 0 0 0 5px">This field is required.</label>
                            <p style="color:#999999; font-size:12px;"><span>*</span>required</p>
                        </div>
                        <br>
                        <div class="clear"></div>
                        <div class="terms_conditions">
                            <span>By creating an account, I accept FanWire's <a href="#">Terms 
                                    of Service </a> and <a href="#">Privacy Policy.</a></span>
                        </div>
                        <input  name='import' type="submit" class="contct_btn" value="Create Account"/>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</form>  
{include file='footer.tpl.html'}