.signup_error.error>label,.signup_error.error .help-block,.signup_error.error .help-inline
	{
	color: #b94a48;
}

.signup_error.error .checkbox,.signup_error.error .radio,.signup_error.error input,.signup_error.error select,.signup_error.error textarea
	{
	color: #b94a48;
}

.signup_error.error input,.signup_error.error select,.signup_error.error textarea
	{
	border-color: #b94a48;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
	-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
}

.signup_error.error input:focus,.signup_error.error select:focus,.signup_error.error textarea:focus
	{
	border-color: #953b39;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 6px
		#d59392;
	-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 6px #d59392;
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 6px #d59392;
}

.signup_error.error .input-prepend .add-on,.signup_error.error .input-append .add-on
	{
	color: #b94a48;
	background-color: #f2dede;
	border-color: #b94a48;
}