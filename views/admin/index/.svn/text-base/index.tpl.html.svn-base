 {include file="$ADMIN/header1.tpl.html"}
 {literal}
 <script type="text/javascript">
	$().ready(function() {
	$("#loginform").validate({
		rules: {
			email: {
				required:true,
				email:true
			},
			pwd: {
				required: true
			}
		}
	});

});
</script>
{/literal}  
            	 <div>
                     <div  align="center" style="padding: 50px">
             	 <form name="loginform" id="loginform" action="" method="post">
                 <table   border="0"  cellpadding="5" cellspacing="5"  align="center">
                {if !empty($error) && $error eq 1}
                <tr>
                    <td height="45" colspan="2" align="center" >
                        <span style="color:#FF0000">Error : </span>{$errorMsg}
                    </td>
                </tr>
                {/if}
                 
                <tr>
                    <td height="45" class="name">Email Id</td>

                    <td><input type="text" name="email" id="email" tabindex="1" value="{$rs['email']}"  size="22" class="testprofile_box" maxlength="64"/></td>
                </tr>
                 <tr>
                    <td height="45" class="name">Password</td>
                    <td><input type="password" name="pwd" id="pwd" tabindex="2" value="{$rs['pwd']}" size="22" class="testprofile_box" maxlength="32"/>
                    </td>
                </tr>
                 <tr>
                     <td></td>
                     <td style="float: left;">
                        <input type="submit"  height="50" width="119" name="login" tabindex="3" class="btn"  value="Log In"/>
                    </td>                      
                </tr> 
            </table>
            </form>
                <div class="clear"></div> 
                </div>  </div>
{include file="$ADMIN/footer.tpl.html"}